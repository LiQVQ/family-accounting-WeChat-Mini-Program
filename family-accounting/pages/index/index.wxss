/* pages/index/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  animation: fadeIn 0.5s ease;
}

.stats-card {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  color: white;
}

.stat-item {
  text-align: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 30rpx;
  font-weight: 300;
  margin-bottom: 10rpx;
  opacity: 0.9;
  letter-spacing: 0.5px;
}

.stat-value {
  font-size: 52rpx;
  font-weight: bold;
  line-height: 1.2;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 0.5px;
}

/* 筛选区域样式 */
.filter-section {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-group {
  margin-bottom: 20rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 8rpx;
  display: block;
}

.filter-input {
  height: 70rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-picker {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
}

.filter-buttons {
  display: flex;
  gap: 15rpx;
  margin-top: 15rpx;
}

.filter-btn {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.filter-btn.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
  transform: scale(1.02);
}

.search-input {
  display: flex;
  align-items: center;
  background: #fafafa;
  border-radius: 12rpx;
  padding: 0 15rpx;
  height: 70rpx;
  margin-top: 15rpx;
}

.search-input input {
  flex: 1;
  padding: 0;
  height: 100%;
  font-size: 26rpx;
  background: transparent;
  border: none;
}

.clear-filter-btn {
  height: 60rpx;
  background: #f0f0f0;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #555;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  transition: all 0.2s ease;
}

.clear-filter-btn:active {
  background: #e0e0e0;
}

.records-list {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.record-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  opacity: 1;
  transform: translateY(0);
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.record-type {
  font-size: 28rpx;
  font-weight: bold;
  padding: 3rpx 8rpx;
  border-radius: 4rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.record-date {
  font-size: 24rpx;
  color: #999;
  background: rgba(255, 255, 255, 0.2);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.record-content {
  margin-bottom: 10rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.3;
  padding: 2rpx 0;
}

.record-note {
  font-size: 24rpx;
  color: #666;
  padding: 2rpx 0;
}

.record-actions {
  text-align: right;
}

.action-btn {
  color: #F44336;
  font-size: 24rpx;
  padding: 0;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0;
  background-color: transparent;
  transition: all 0.2s ease;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  transform: scale(1);
  z-index: 10;
}

.add-btn:active {
  transform: scale(0.92);
}

/* 添加页面过渡动画 */
.page-transition {
  animation: pageFade 0.3s ease;
}

@keyframes pageFade {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}