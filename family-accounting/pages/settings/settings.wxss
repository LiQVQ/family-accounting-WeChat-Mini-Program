/* pages/settings/settings.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
}

.settings-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
}

.settings-group {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.settings-label {
  font-size: 28rpx;
  color: #333;
}

.settings-value {
  font-size: 28rpx;
  color: #666;
}