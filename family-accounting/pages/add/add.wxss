/* pages/add/add.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2E7D32;
  margin-bottom: 10rpx;
  display: block;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.form {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 12rpx;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.type-buttons {
  display: flex;
  gap: 15rpx;
  margin-top: 10rpx;
}

.type-btn {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.type-btn.active {
  background: #4CAF50;
  color: white;
  border-color: #4CAF50;
  transform: scale(1.02);
}

.date-picker {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  background: #fafafa;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-display {
  color: #333;
  font-size: 28rpx;
}

.submit-btn {
  height: 80rpx;
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  border-radius: 12rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.submit-btn:active {
  opacity: 0.85;
}