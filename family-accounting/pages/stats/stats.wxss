/* pages/stats/stats.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
}

.chart-container {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
}

.category-selector {
  display: flex;
  justify-content: flex-end;
}

.category-item {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.category-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.summary {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 32rpx;
  font-weight: bold;
}